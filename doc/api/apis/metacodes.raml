#type: collection
get:
  is: [ searchable: { searchFields: "name" }, orderable, pageable ]
  securedBy: [ null, token, oauth_2_0, cookie ]
  responses:
    200:
      body:
        application/json:
          example: !include ../examples/metacodes.json
/{id}:
  #type: item
  securedBy: [ null, token, oauth_2_0, cookie ]
  get:
    responses:
      200:
        body:
          application/json:
            example: !include ../examples/metacode.json
