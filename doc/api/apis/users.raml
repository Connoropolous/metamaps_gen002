#type: collection
securedBy: [ null, cookie, token, oauth_2_0 ]
get:
  is: [ searchable: { searchFields: "name" }, orderable, pageable ]
  responses:
    200:
      body:
        application/json:
          example: !include ../examples/users.json
/{id}:
  #type: item
  securedBy: [ null, cookie, token, oauth_2_0 ]
  get:
    responses:
      200:
        body:
          application/json:
            example: !include ../examples/user.json
/current:
  #type: item
  get:
    responses:
      200:
        body:
          application/json:
            example: !include ../examples/current_user.json
